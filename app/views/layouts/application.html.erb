<!DOCTYPE html>
<html>
  <head>
    <title>MusicCloud</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="text/javascript">
      window.logoURL = "<%= image_url('soundcloud-logo.png') %>";
      window.cameraImgURL = "<%= image_url('camera-upload.png') %>";

      window.trackUrl = "<%= audio_url('paris.mp3') %>";
    </script>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>
  
  <body>
    <%= yield %>
  </body>
</html>
